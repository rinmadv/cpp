SRCS	= 	srcs/Zombie.cpp srcs/main.cpp srcs/newZombie.cpp srcs/randomChump.cpp

OBJS = $(SRCS:.c=.o)

CC    = c++

CFLAGS  = -Wall -Wextra -Werror -std=c++98 #-g3 

NAME    = BraiiiiiiinnnzzzZ

DEPS	=	${SRCS:.c=.d}

ifeq ($(debug), true)
	CFLAGS += -fsanitize=address,undefined
endif

